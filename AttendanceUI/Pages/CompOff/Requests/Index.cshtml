@page
@model AttendanceUI.Pages.CompOff.Requests.IndexModel

@{
    ViewData["Title"] = "Comp Off Requests";
}

<div class="container-fluid pb-5">
    <!-- Page Header -->
    <div class="d-flex align-items-center justify-content-between mb-4 mt-4">
        <div>
            <h4 class="mb-1 fw-bold">Comp Off Requests</h4>
            <p class="text-muted mb-0 small">Manage compensatory off requests from employees</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search Box -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="input-group drop-shadow-sm">
                        <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-search"></i></span>
                        <input type="text" id="searchBox" class="form-control border-start-0 ps-0" placeholder="Search by employee name or date (e.g., 'Sachin' or '2026-02-13')..." />
                    </div>

                </div>
                <div class="col-md-4 text-end mt-3 mt-md-0">
                    <button class="btn btn-outline-secondary" onclick="clearSearch()">
                        <i class="bi bi-x-circle me-1"></i> Clear Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs Navigation -->
    <ul class="nav nav-pills mb-4 gap-2" id="compOffTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active fw-semibold drop-shadow-sm" id="pending-tab" data-bs-toggle="pill" data-bs-target="#pending" type="button" role="tab">
                <i class="bi bi-clock-history me-2"></i>Pending Approval
                <span class="badge bg-white text-primary ms-2">@Model.PendingRequests.Count</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link fw-semibold drop-shadow-sm" id="draft-tab" data-bs-toggle="pill" data-bs-target="#draft" type="button" role="tab">
                <i class="bi bi-hourglass-split me-2"></i>Draft
                <span class="badge bg-white text-secondary ms-2">@Model.DraftRequests.Count</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link fw-semibold drop-shadow-sm" id="processed-tab" data-bs-toggle="pill" data-bs-target="#processed" type="button" role="tab">
                <i class="bi bi-check2-all me-2"></i>Processed
                <span class="badge bg-white text-success ms-2">@Model.ProcessedRequests.Count</span>
            </button>
        </li>
    </ul>

    <!-- Tabs Content -->
    <div class="tab-content" id="compOffTabsContent">
        <!-- Pending Requests Pane -->
        <div class="tab-pane fade show active" id="pending" role="tabpanel">
            @if (Model.PendingRequests.Any())
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-modern align-middle mb-0">
                                <thead class="bg-light text-uppercase small text-muted">
                                    <tr>
                                        <th>Employee</th>
                                        <th>Worked Date</th>
                                        <th>Shift</th>
                                        <th>IN Time</th>
                                        <th>OUT Time</th>
                                        <th>Hours Worked</th>
                                        <th>Comp Off</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.PendingRequests)
                                    {
                                        <tr>
                                            <td><strong>@item.Employee?.EmployeeName</strong></td>
                                            <td>@item.WorkedDate.ToString("dd-MMM-yyyy")</td>
                                            <td>@item.Shift?.ShiftName</td>
                                            <td>@item.InTime?.ToString("hh:mm tt")</td>
                                            <td>@item.OutTime?.ToString("hh:mm tt")</td>
                                            <td>
                                                @if (item.WorkMinutes.HasValue)
                                                {
                                                    var hours = item.WorkMinutes.Value / 60;
                                                    var minutes = item.WorkMinutes.Value % 60;
                                                    <span>@hours h @minutes m</span>
                                                }
                                            </td>
                                            <td>
                                                <form method="post" class="d-flex align-items-center gap-2">
                                                    <input type="number" name="compOffDays" value="@item.CompOffDays" 
                                                           class="form-control form-control-sm" style="width: 70px;" 
                                                           step="0.5" min="0" required />
                                                    <button type="submit" asp-page-handler="Approve" asp-route-id="@item.Id" 
                                                            class="btn btn-sm btn-soft-success fw-semibold" onclick="return confirm('Approve this comp off request?')">
                                                        <i class="bi bi-check-circle me-1"></i> Approve
                                                    </button>
                                                </form>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-soft-danger fw-semibold" 
                                                        onclick="showRejectModal(@item.Id, '@item.Employee?.EmployeeName')">
                                                    <i class="bi bi-x-circle me-1"></i> Reject
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-light border shadow-sm p-4 text-center">
                    <p class="text-muted mb-0">No pending requests found.</p>
                </div>
            }
        </div>

        <!-- Draft Requests Pane -->
        <div class="tab-pane fade" id="draft" role="tabpanel">
            @if (Model.DraftRequests.Any())
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-modern align-middle mb-0">
                                <thead class="bg-light text-uppercase small text-muted">
                                    <tr>
                                        <th>Employee</th>
                                        <th>Worked Date</th>
                                        <th>Shift</th>
                                        <th>IN Time</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.DraftRequests)
                                    {
                                        <tr class="table-secondary">
                                            <td><strong>@item.Employee?.EmployeeName</strong></td>
                                            <td>@item.WorkedDate.ToString("dd-MMM-yyyy")</td>
                                            <td>@item.Shift?.ShiftName</td>
                                            <td>@item.InTime?.ToString("hh:mm tt")</td>
                                            <td><span class="badge bg-light text-secondary border">Waiting for OUT punch</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-light border shadow-sm p-4 text-center">
                    <p class="text-muted mb-0">No draft requests found.</p>
                </div>
            }
        </div>

        <!-- Processed Requests Pane -->
        <div class="tab-pane fade" id="processed" role="tabpanel">
            @if (Model.ProcessedRequests.Any())
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-modern align-middle mb-0">
                                <thead class="bg-light text-uppercase small text-muted">
                                    <tr>
                                        <th>Employee</th>
                                        <th>Worked Date</th>
                                        <th>Hours Worked</th>
                                        <th>Comp Off</th>
                                        <th>Status</th>
                                        <th>Expires On</th>
                                        <th>Processed By</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ProcessedRequests)
                                    {
                                        <tr>
                                            <td><strong>@item.Employee?.EmployeeName</strong></td>
                                            <td>@item.WorkedDate.ToString("dd-MMM-yyyy")</td>
                                            <td>
                                                @if (item.WorkMinutes.HasValue)
                                                {
                                                    var hours = item.WorkMinutes.Value / 60;
                                                    var minutes = item.WorkMinutes.Value % 60;
                                                    <span>@hours h @minutes m</span>
                                                }
                                            </td>
                                            <td>@item.CompOffDays Day(s)</td>
                                            <td>
                                                @if (item.Status == "Approved")
                                                {
                                                    <span class="badge bg-soft-success text-success"><i class="bi bi-check-circle me-1"></i>Approved</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-soft-danger text-danger"><i class="bi bi-x-circle me-1"></i>Rejected</span>
                                                    @if (!string.IsNullOrEmpty(item.RejectionReason))
                                                    {
                                                        <br /><small class="text-muted">@item.RejectionReason</small>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @if (item.Status == "Approved" && item.ExpiryDate.HasValue)
                                                {
                                                    <span class="@(item.ExpiryDate < DateOnly.FromDateTime(DateTime.Today) ? "text-danger fw-bold" : "text-muted")">
                                                        @item.ExpiryDate.Value.ToString("dd-MMM-yyyy")
                                                        @if (item.ExpiryDate < DateOnly.FromDateTime(DateTime.Today))
                                                        {
                                                            <br /><small>(Expired)</small>
                                                        }
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td>@item.ApprovedBy</td>
                                            <td>@item.ApprovedDate?.ToString("dd-MMM-yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-light border shadow-sm p-4 text-center">
                    <p class="text-muted mb-0">No processed requests found.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Reject">
                <div class="modal-header">
                    <h5 class="modal-title">Reject Comp Off Request</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="rejectId" name="id" />
                    <p>Reject comp off request for <strong id="employeeName"></strong>?</p>
                    <div class="mb-3">
                        <label for="reason" class="form-label">Reason for rejection:</label>
                        <textarea class="form-control" id="reason" name="reason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .nav-pills .nav-link {
        background-color: #ffffff;
        color: #212529 !important;
        border: 1px solid #dee2e6;
        padding: 0.6rem 1.2rem;
        transition: all 0.2s ease;
    }
    .nav-pills .nav-link:hover {
        background-color: #f8f9fa;
        border-color: #adb5bd;
    }
    .nav-pills .nav-link.active {
        background-color: #0d6efd !important;
        color: #fff !important;
        border-color: #0d6efd;
        box-shadow: 0 4px 6px rgba(13, 110, 253, 0.2);
    }
    .nav-pills .nav-link i {
        opacity: 0.8;
    }
    .nav-pills .nav-link.active i {
        opacity: 1;
    }
    #pending-tab i { color: #f59e0b; }
    #draft-tab i { color: #6b7280; }
    #processed-tab i { color: #10b981; }
    .nav-pills .nav-link.active i { color: #fff; }

    .btn-soft-success {
        background-color: #e8f5e9;
        color: #2e7d32;
        border: none;
    }
    .btn-soft-success:hover {
        background-color: #c8e6c9;
        color: #1b5e20;
    }
    .btn-soft-danger {
        background-color: #ffebee;
        color: #c62828;
        border: none;
    }
    .btn-soft-danger:hover {
        background-color: #ffcdd2;
        color: #b71c1c;
    }
    .badge.bg-white {
        font-weight: 700;
        box-shadow: inset 0 0 0 1px rgba(0,0,0,0.1);
    }
    .nav-pills .nav-link:not(.active) .badge {
        background-color: #e9ecef !important;
        color: #495057 !important;
    }
</style>

@section Scripts {
    <script>
        function showRejectModal(id, employeeName) {
            document.getElementById('rejectId').value = id;
            document.getElementById('employeeName').textContent = employeeName;
            var modal = new bootstrap.Modal(document.getElementById('rejectModal'));
            modal.show();
        }

        // Search functionality
        document.getElementById('searchBox').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const tables = document.querySelectorAll('.table tbody');
            
            tables.forEach(table => {
                const rows = table.querySelectorAll('tr');
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });

        function clearSearch() {
            document.getElementById('searchBox').value = '';
            const tables = document.querySelectorAll('.table tbody');
            tables.forEach(table => {
                const rows = table.querySelectorAll('tr');
                rows.forEach(row => {
                    row.style.display = '';
                });
            });
        }
    </script>
}
