@page "{id:int}"
@model AttendanceUI.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit Employee";
    var isActive = string.Equals(Model.Input.Status, "active", StringComparison.OrdinalIgnoreCase);
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h4 class="mb-1 fw-bold">Edit Employee</h4>
        <p class="text-muted mb-0 small">Update employee record â€” ID: <code>@Model.Id</code></p>
    </div>
    <div class="d-flex gap-2">
        <form method="post" asp-page-handler="ToggleStatus">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn @(isActive ? "btn-outline-secondary" : "btn-outline-success")">
                <i class="bi @(isActive ? "bi-slash-circle" : "bi-check-circle") me-1"></i>
                @(isActive ? "Deactivate" : "Activate")
            </button>
        </form>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0"><i class="bi bi-person-gear me-2 text-primary"></i>Employee Details</h5>
        <span class="badge @(isActive ? "text-bg-success" : "text-bg-secondary")">
            @(isActive ? "ACTIVE" : "INACTIVE")
        </span>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" style="display:none;"></div>

            <div class="row g-4">
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Employee ID</label>
                    <input class="form-control" value="@Model.Id" readonly />
                </div>
                <div class="col-md-9">
                    <label asp-for="Input.EmployeeName" class="form-label fw-semibold"></label>
                    <input asp-for="Input.EmployeeName" class="form-control" />
                    <span asp-validation-for="Input.EmployeeName" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.DepartmentId" class="form-label fw-semibold"></label>
                    <select asp-for="Input.DepartmentId" class="form-select" asp-items="Model.DepartmentOptions">
                        <option value="">(None)</option>
                    </select>
                    <span asp-validation-for="Input.DepartmentId" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.DesignationId" class="form-label fw-semibold"></label>
                    <select asp-for="Input.DesignationId" class="form-select" asp-items="Model.DesignationOptions">
                        <option value="">(None)</option>
                    </select>
                    <span asp-validation-for="Input.DesignationId" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.ShiftId" class="form-label fw-semibold"></label>
                    <select asp-for="Input.ShiftId" class="form-select" asp-items="Model.ShiftOptions">
                        <option value="">Select shift</option>
                    </select>
                    <span asp-validation-for="Input.ShiftId" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.Weekoff" class="form-label fw-semibold"></label>
                    <select asp-for="Input.Weekoff" class="form-select" asp-items="Model.WeekoffOptions">
                        <option value="">Select weekoff</option>
                    </select>
                    <span asp-validation-for="Input.Weekoff" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.JoiningDate" class="form-label fw-semibold"></label>
                    <input asp-for="Input.JoiningDate" class="form-control" type="date" />
                    <span asp-validation-for="Input.JoiningDate" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.DateOfBirth" class="form-label fw-semibold"></label>
                    <input asp-for="Input.DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.Phone" class="form-label fw-semibold"></label>
                    <input asp-for="Input.Phone" class="form-control" />
                    <span asp-validation-for="Input.Phone" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.Status" class="form-label fw-semibold"></label>
                    <select asp-for="Input.Status" class="form-select" asp-items="Model.StatusOptions"></select>
                    <span asp-validation-for="Input.Status" class="text-danger small"></span>
                </div>
            </div>

            <hr class="my-4">
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-check-lg me-1"></i>Save Changes
                </button>
                <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
