@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

@using Microsoft.AspNetCore.Diagnostics
@{
    var exceptionFeature = HttpContext.Features.Get<IExceptionHandlerPathFeature>();
}

@if (exceptionFeature != null)
{
    <div class="alert alert-danger mt-4">
        <h5 class="fw-bold">Exception Details</h5>
        <p class="mb-1 text-uppercase small fw-semibold">Message:</p>
        <pre class="bg-dark text-white p-3 rounded">@exceptionFeature.Error.Message</pre>
        <p class="mb-1 text-uppercase small fw-semibold">Path:</p>
        <p><code>@exceptionFeature.Path</code></p>
        <p class="mb-1 text-uppercase small fw-semibold">Stack Trace:</p>
        <pre class="small text-muted" style="max-height: 200px; overflow: auto;">@exceptionFeature.Error.StackTrace</pre>
    </div>
}
