@page "{id:int}"
@model AttendanceUI.Pages.Holidays.EditModel
@{
    ViewData["Title"] = "Edit Holiday";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h4 class="mb-1 fw-bold">Edit Holiday</h4>
        <p class="text-muted mb-0 small">Update holiday details</p>
    </div>
    <a asp-page="./Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-calendar-event me-2 text-primary"></i>Holiday Details</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" style="display:none;"></div>
            <div class="row g-4">
                <div class="col-12">
                    <label asp-for="Input.HolidayName" class="form-label fw-semibold"></label>
                    <input asp-for="Input.HolidayName" class="form-control" placeholder="e.g. Holi, Diwali, Regional Holiday" />
                    <span asp-validation-for="Input.HolidayName" class="text-danger small"></span>
                </div>

                <div class="col-12 mt-3">
                    <label class="form-label fw-semibold">Duration</label>
                    <div class="d-flex gap-3">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="duration" id="single-day" value="single" @(Model.Input.StartDate == Model.Input.EndDate ? "checked" : "")>
                            <label class="form-check-label" for="single-day">Single Day</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="duration" id="multiple-days" value="multiple" @(Model.Input.StartDate != Model.Input.EndDate ? "checked" : "")>
                            <label class="form-check-label" for="multiple-days">Multiple Days</label>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mt-3">
                    <label asp-for="Input.StartDate" class="form-label fw-semibold" id="date-label">@(Model.Input.StartDate == Model.Input.EndDate ? "Date" : "From Date")</label>
                    <input asp-for="Input.StartDate" class="form-control" type="date" id="start-date" />
                    <span asp-validation-for="Input.StartDate" class="text-danger small"></span>
                </div>
                
                <div class="col-md-6 mt-3" id="end-date-container" style="@(Model.Input.StartDate == Model.Input.EndDate ? "display:none;" : "")">
                    <label asp-for="Input.EndDate" class="form-label fw-semibold"></label>
                    <input asp-for="Input.EndDate" class="form-control" type="date" id="end-date" />
                    <span asp-validation-for="Input.EndDate" class="text-danger small"></span>
                </div>

                <div class="col-12 mt-4">
                    <div class="card bg-light border-0">
                        <div class="card-body">
                            <label class="form-label fw-semibold">Applicability</label>
                            <div class="d-flex flex-column gap-2 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Input.IsGlobal" value="true" id="apply-all">
                                    <label class="form-check-label" for="apply-all">Apply to All Employees</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Input.IsGlobal" value="false" id="apply-selected">
                                    <label class="form-check-label" for="apply-selected">Apply to Selected Employees Only</label>
                                </div>
                            </div>

                            <div id="employee-selection" style="@(Model.Input.IsGlobal ? "display:none;" : "")">
                                <div class="input-group mb-2">
                                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                                    <input type="text" id="emp-search" class="form-control form-control-sm" placeholder="Search employees...">
                                </div>
                                <div class="border rounded bg-white p-2" style="max-height: 200px; overflow-y: auto;">
                                    @foreach (var emp in Model.Employees)
                                    {
                                        <div class="form-check emp-item">
                                            <input class="form-check-input emp-checkbox" type="checkbox" name="Input.EmployeeIds" value="@emp.EmployeeId" id="emp-@emp.EmployeeId" @(Model.Input.EmployeeIds?.Contains(emp.EmployeeId) == true ? "checked" : "")>
                                            <label class="form-check-label small" for="emp-@emp.EmployeeId">
                                                @emp.EmployeeName (@emp.EmployeeId) - <span class="text-muted">@emp.Department?.DepartmentName</span>
                                            </label>
                                        </div>
                                    }
                                </div>
                                <div class="mt-2 small text-muted">
                                    <span id="selected-count">@(Model.Input.EmployeeIds?.Count ?? 0)</span> employees selected
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 mt-3">
                    <label asp-for="Input.Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Input.Description" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Input.Description" class="text-danger small"></span>
                </div>
            </div>
            <hr class="my-4">
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-check-lg me-1"></i>Save Changes
                </button>
                <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Duration toggle
            $('input[name="duration"]').change(function () {
                if (this.value === 'multiple') {
                    $('#end-date-container').slideDown();
                    $('#date-label').text('From Date');
                } else {
                    $('#end-date-container').slideUp();
                    $('#date-label').text('Date');
                    $('#end-date').val($('#start-date').val());
                }
            });

            $('#start-date').change(function () {
                if ($('input[name="duration"]:checked').val() === 'single') {
                    $('#end-date').val($(this).val());
                }
            });

            // Applicability toggle
            $('input[name="Input.IsGlobal"]').change(function () {
                if (this.value === 'false') {
                    $('#employee-selection').slideDown();
                } else {
                    $('#employee-selection').slideUp();
                }
            });

            // Employee search
            $('#emp-search').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $('.emp-item').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Selected count
            $('.emp-checkbox').change(function() {
                var count = $('.emp-checkbox:checked').length;
                $('#selected-count').text(count);
            });
        });
    </script>
}
