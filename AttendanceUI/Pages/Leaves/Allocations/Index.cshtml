@model AttendanceUI.Pages.Leaves.Allocations.IndexModel
@{
    ViewData["Title"] = "Leave Allocations";
}

<div class="container-fluid pb-5">
    <!-- Page Header -->
    <div class="d-flex align-items-center justify-content-between mb-4 mt-4">
        <div>
            <h4 class="mb-1 fw-bold">Leave Allocations</h4>
            <p class="text-muted mb-0 small">Cycle: Nov @Model.Year - Oct @(Model.Year + 1)</p>
        </div>
        <div class="d-flex gap-2">
            <form method="get" class="d-flex gap-2 me-2">
                <div class="input-group shadow-sm">
                    <input type="text" name="SearchString" value="@Model.SearchString" class="form-control border-0" placeholder="Search employee..." style="width: 200px;" />
                    <button type="submit" class="btn btn-white border-0">
                        <i class="bi bi-search text-primary"></i>
                    </button>
                    @if (!string.IsNullOrEmpty(Model.SearchString))
                    {
                        <a asp-page="./Index" asp-route-Year="@Model.Year" class="btn btn-white border-0 border-start" title="Clear Search">
                            <i class="bi bi-x-lg text-danger"></i>
                        </a>
                    }
                </div>
                <select name="Year" onchange="this.form.submit()" class="form-select border-0 shadow-sm" style="width: 150px;">
                    @for (int y = DateTime.Now.Year - 1; y <= DateTime.Now.Year + 1; y++)
                    {
                        <option value="@y" selected="@(Model.Year == y ? "selected" : null)">Nov @y - Oct @(y+1)</option>
                    }
                </select>
            </form>
            @if (!Model.Allocations.Any())
            {
                <form method="post" asp-page-handler="CarryForward" asp-route-Year="@Model.Year" onsubmit="return confirm('Initialize @Model.Year based on @(Model.Year-1)? This will copy quotas and carry forward balances for eligible leave types.')">
                    <button type="submit" class="btn btn-soft-info">
                        <i class="bi bi-magic me-1"></i> Setup @Model.Year
                    </button>
                </form>
            }
            <form method="post" asp-page-handler="InitializeAll" asp-route-Year="@Model.Year" onsubmit="return confirm('Create default allocations for all active employees?')" class="d-inline">
                <button type="submit" class="btn btn-soft-primary">
                    <i class="bi bi-people-fill me-1"></i> Initialize All
                </button>
            </form>
            <button type="button" class="btn btn-soft-success" onclick="toggleBulkEdit()">
                <i class="bi bi-pencil-square me-1"></i> <span id="bulk-edit-text">Bulk Edit</span>
            </button>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAllocationModal">
                <i class="bi bi-plus-lg me-1"></i> Add Allocation
            </button>
        </div>
    </div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

    <div class="alert alert-info border-0 shadow-sm p-4 d-flex align-items-center mb-4">
        <i class="bi bi-info-circle-fill text-info fs-4 me-3"></i> 
        <div>
            <h6 class="mb-0 fw-bold">Custom Cycle Active</h6>
            <p class="mb-0 text-muted small">Your company follows a November to October leave year. Allocations for "@Model.Year" cover dates from 01-Nov-@Model.Year to 31-Oct-@(Model.Year + 1).</p>
        </div>
    </div>

<form method="post" asp-page-handler="BulkUpdate" asp-route-Year="@Model.Year">
    <div id="bulk-save-bar" class="alert alert-warning py-2 mb-3 d-flex justify-content-between align-items-center shadow-sm border-0" style="display:none !important;">
        <span><i class="bi bi-info-circle-fill me-2"></i> Bulk Edit Mode - Changes will not be saved until you click Save All.</span>
        <div>
            <button type="button" class="btn btn-sm btn-secondary me-2" onclick="location.reload()">Cancel</button>
            <button type="submit" class="btn btn-sm btn-success">Save All Changes</button>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-modern align-middle mb-0">
                    <thead class="bg-light text-uppercase small text-muted">
                        <tr>
                        <th>Employee</th>
                        <th>Leave Type</th>
                        <th class="text-center" style="width: 120px;">Yearly Quota</th>
                        <th class="text-center" style="width: 120px;">Opening Bal.</th>
                        <th class="text-center" style="width: 120px;">Used</th>
                        <th class="text-center">Remaining</th>
                        <th class="text-end pe-4 bulk-hide">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Allocations.Count; i++)
                    {
                        var allocation = Model.Allocations[i];
                        <tr>
                            <td>
                                <strong>@allocation.Employee?.EmployeeName</strong><br/>
                                <small class="text-muted">ID: @allocation.EmployeeId</small>
                                <input type="hidden" name="BulkAllocations[@i].Id" value="@allocation.Id" />
                            </td>
                            <td>@allocation.LeaveType?.Name</td>
                            <td class="text-center">
                                <span class="bulk-hide">@allocation.TotalAllocated</span>
                                <input type="number" step="any" name="BulkAllocations[@i].TotalAllocated" value="@allocation.TotalAllocated" 
                                       class="form-control form-control-sm text-center d-none bulk-show" />
                            </td>
                            <td class="text-center">
                                <span class="bulk-hide">@allocation.OpeningBalance</span>
                                <input type="number" step="any" name="BulkAllocations[@i].OpeningBalance" value="@allocation.OpeningBalance" 
                                       class="form-control form-control-sm text-center d-none bulk-show" />
                            </td>
                            <td class="text-center text-danger">
                                <span class="bulk-hide">@allocation.UsedCount</span>
                                <input type="number" step="any" name="BulkAllocations[@i].UsedCount" value="@allocation.UsedCount" 
                                       class="form-control form-control-sm text-center d-none bulk-show" />
                            </td>
                            <td class="text-center fw-bold text-success">@allocation.RemainingCount</td>
                            <td class="text-end bulk-hide pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <button type="button" class="btn btn-sm btn-soft-primary" 
                                            onclick="editAllocation(@allocation.Id, @allocation.TotalAllocated, @allocation.OpeningBalance, @allocation.UsedCount, '@allocation.Employee?.EmployeeName', '@allocation.LeaveType?.Name')">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-soft-danger" onclick="confirmDelete(@allocation.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Allocations.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">No allocations found for @Model.Year.</td>
                        </tr>
                    }
                </tbody>
            </table>
            </div> <!-- End table-responsive -->
        </div> <!-- End card-body -->
    </div> <!-- End card -->
</form>

<form id="hiddenDeleteForm" method="post" asp-page-handler="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="delete-id-field" />
</form>

<!-- Add Modal -->
<div class="modal fade" id="addAllocationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Add">
                <div class="modal-header">
                    <h5 class="modal-title">New Leave Allocation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="All" class="text-danger small mb-3"></div>
                    <div class="mb-3">
                        <label class="form-label">Employee</label>
                        <select asp-for="NewAllocation.EmployeeId" class="form-select" required onchange="applyProRata()">
                            <option value="">-- Select Employee --</option>
                            @foreach (var emp in Model.Employees)
                            {
                                <option value="@emp.EmployeeId">@emp.EmployeeName (@emp.EmployeeId)</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Leave Type</label>
                        <select asp-for="NewAllocation.LeaveTypeId" class="form-select" required onchange="updateDefaultQuota()">
                            <option value="">-- Select Type --</option>
                            @foreach (var type in Model.LeaveTypes)
                            {
                                <option value="@type.Id">@type.Name (@type.Code)</option>
                            }
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Yearly Quota</label>
                            <input asp-for="NewAllocation.TotalAllocated" id="new-quota" class="form-control" type="number" step="any" value="0" />
                            <small id="prorata-info" class="text-muted" style="display:none;"></small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Opening Balance</label>
                            <input asp-for="NewAllocation.OpeningBalance" class="form-control" type="number" step="any" value="0" />
                        </div>
                    </div>
                    <p class="text-muted small">Total available will be Quota + Opening Balance.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Allocation</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editAllocationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                <input type="hidden" asp-for="EditAllocation.Id" id="edit-id" />
                <div class="modal-header">
                    <h5 class="modal-title">Edit Allocation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Employee</label>
                        <input type="text" id="edit-emp-name" class="form-control-plaintext fw-bold" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Leave Type</label>
                        <input type="text" id="edit-type-name" class="form-control-plaintext fw-bold" readonly />
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Yearly Quota</label>
                            <input asp-for="EditAllocation.TotalAllocated" id="edit-quota" class="form-control" type="number" step="any" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Opening Bal.</label>
                            <input asp-for="EditAllocation.OpeningBalance" id="edit-opening" class="form-control" type="number" step="any" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Used Count</label>
                            <input asp-for="EditAllocation.UsedCount" id="edit-used" class="form-control" type="number" step="any" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update Allocation</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div> <!-- Close container-fluid -->

@section Scripts {
    <script>
        function editAllocation(id, quota, opening, used, empName, typeName) {
            document.getElementById('edit-id').value = id;
            document.getElementById('edit-quota').value = quota;
            document.getElementById('edit-opening').value = opening;
            document.getElementById('edit-used').value = used;
            document.getElementById('edit-emp-name').value = empName;
            document.getElementById('edit-type-name').value = typeName;
            
            var modal = new bootstrap.Modal(document.getElementById('editAllocationModal'));
            modal.show();
        }

        function toggleBulkEdit() {
            const isEditing = document.getElementById('bulk-save-bar').style.display !== 'none';
            const hideItems = document.querySelectorAll('.bulk-hide');
            const showItems = document.querySelectorAll('.bulk-show');
            const saveBar = document.getElementById('bulk-save-bar');
            const btnText = document.getElementById('bulk-edit-text');

            if (isEditing) {
                // Cancel/Hide
                saveBar.setAttribute('style', 'display:none !important;');
                hideItems.forEach(el => el.classList.remove('d-none'));
                showItems.forEach(el => el.classList.add('d-none'));
                btnText.innerText = 'Bulk Edit';
            } else {
                // Show/Edit
                saveBar.setAttribute('style', 'display:flex !important;');
                hideItems.forEach(el => el.classList.add('d-none'));
                showItems.forEach(el => el.classList.remove('d-none'));
                btnText.innerText = 'Cancel Edit';
            }
        }

        function confirmDelete(id) {
            if (confirm('Are you sure you want to remove this allocation?')) {
                document.getElementById('delete-id-field').value = id;
                document.getElementById('hiddenDeleteForm').submit();
            }
        }

        async function applyProRata() {
            const empId = document.getElementById('NewAllocation_EmployeeId').value;
            const quota = document.getElementById('new-quota').value;
            const year = @Model.Year;

            if (!empId || !quota || parseFloat(quota) <= 0) {
                // info message hidden
                document.getElementById('prorata-info').style.display = 'none';
                return;
            }

            try {
                const response = await fetch(`?handler=CalculateProRata&employeeId=${empId}&yearlyQuota=${quota}&year=${year}`);
                const result = await response.json();
                
                if (result.success) {
                    document.getElementById('new-quota').value = result.value;
                    const info = document.getElementById('prorata-info');
                    info.innerText = `Pro-rata applied (Probation End: ${result.probationEnd})`;
                    info.style.display = 'block';
                } else {
                    document.getElementById('prorata-info').style.display = 'none';
                }
            } catch (error) {
                console.error("Error calculating pro-rata:", error);
            }
        }

        async function updateDefaultQuota() {
            const typeId = document.getElementById('NewAllocation_LeaveTypeId').value;
            if (!typeId) {
                document.getElementById('new-quota').value = 0;
                return;
            }

            try {
                const response = await fetch(`?handler=LeaveTypeDetails&id=${typeId}`);
                const result = await response.json();
                if (result.success) {
                    document.getElementById('new-quota').value = result.quota;
                    // Automatically trigger pro-rata after setting default
                    await applyProRata();
                }
            } catch (error) {
                console.error("Error fetching default quota:", error);
            }
        }
    </script>
}
