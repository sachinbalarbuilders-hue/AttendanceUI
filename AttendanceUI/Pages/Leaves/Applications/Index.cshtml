@page
@model AttendanceUI.Pages.Leaves.Applications.IndexModel
@{
    ViewData["Title"] = "Leave Applications";
}

<style>
    /* Hide validation summary if it's completely empty */
    .validation-summary-valid {
        display: none !important;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1 fw-bold">Leave Applications</h4>
        <p class="text-muted mb-0 small">Manage employee leave records</p>
    </div>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addLeaveModal">
        <i class="bi bi-calendar-plus me-1"></i>Mark Employee Leave
    </button>
</div>

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">All Leave Records</h5>
        <span class="badge text-bg-secondary">@Model.LeaveApplications.Count total</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-modern align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">App #</th>
                        <th>Employee</th>
                        <th>Type</th>
                        <th>Dates</th>
                        <th class="text-center">Days</th>
                        <th>Day Type</th>
                        <th>Reason</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.LeaveApplications.Any())
                    {
                        <tr><td colspan="8" class="text-center py-5 text-muted">
                            <i class="bi bi-calendar-x fs-1 d-block mb-2 opacity-25"></i>No leave records found.
                        </td></tr>
                    }
                    @foreach (var app in Model.LeaveApplications)
                    {
                        <tr>
                            <td class="ps-4">
                                <code class="text-primary">@app.ApplicationNumber</code>
                            </td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="avatar-circle" style="width:32px;height:32px;font-size:0.8rem;">
                                        @(app.Employee?.EmployeeName?.Substring(0, 1).ToUpper() ?? "?")
                                    </div>
                                    <div>
                                        <div class="fw-semibold small">@app.Employee?.EmployeeName</div>
                                        <div class="text-muted" style="font-size:0.75rem;">ID: @app.EmployeeId</div>
                                    </div>
                                </div>
                            </td>
                            <td><span class="badge text-bg-secondary">@app.LeaveType?.Code</span></td>
                            <td class="small">
                                <div>@app.StartDate.ToString("dd MMM yyyy")</div>
                                @if (app.StartDate != app.EndDate)
                                {
                                    <div class="text-muted">to @app.EndDate.ToString("dd MMM yyyy")</div>
                                }
                            </td>
                            <td class="text-center fw-bold">@app.TotalDays</td>
                            <td>
                                @if (app.DayType != "Full Day")
                                {
                                    <span class="badge text-bg-warning">@app.DayType</span>
                                }
                                else
                                {
                                    <span class="badge text-bg-secondary">Full Day</span>
                                }
                            </td>
                            <td class="small text-muted" style="max-width:150px;">@app.Reason</td>
                            <td class="text-end pe-4">
                                <div class="d-flex gap-1 justify-content-end">
                                    <button type="button" class="btn btn-sm btn-outline-primary"
                                        onclick="editLeave(@app.Id, @app.LeaveTypeId, '@app.StartDate.ToString("yyyy-MM-dd")', '@app.EndDate.ToString("yyyy-MM-dd")', '@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(app.Reason ?? ""))', '@app.Employee?.EmployeeName', '@app.DayType', @app.EmployeeId, @app.IgnoreSandwichRule.ToString().ToLower())">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@app.Id"
                                          onsubmit="return confirm('Delete this leave entry? This will reverse the used count in allocations.')" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Leave Modal -->
<div class="modal fade" id="addLeaveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Add">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold"><i class="bi bi-calendar-plus me-2 text-primary"></i>Mark Employee Leave</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body pt-3">
                    <div asp-validation-summary="All" class="alert alert-danger small mb-3"></div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Employee</label>
                        <select asp-for="NewApplication.EmployeeId" class="form-select" required>
                            <option value="">— Select Employee —</option>
                            @foreach (var emp in Model.Employees)
                            {
                                <option value="@emp.EmployeeId">@emp.EmployeeName (@emp.EmployeeId)</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Leave Type</label>
                        <select asp-for="NewApplication.LeaveTypeId" class="form-select" required id="add-leave-type">
                            <option value="">— Select Type —</option>
                            @foreach (var type in Model.LeaveTypes)
                            {
                                <option value="@type.Id">@type.Name (@type.Code)</option>
                            }
                        </select>
                        <div id="add-balance-info" class="mt-1 small text-muted" style="display:none;">
                            Balance: <span id="add-balance-val" class="fw-bold">0</span> days
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Duration</label>
                        <div class="d-flex gap-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="duration" id="add-single-day" value="single" checked>
                                <label class="form-check-label" for="add-single-day">Single Day</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="duration" id="add-multiple-days" value="multiple">
                                <label class="form-check-label" for="add-multiple-days">Multiple Days</label>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-6" id="add-start-container">
                            <label class="form-label fw-semibold" id="add-date-label">Date</label>
                            <input asp-for="NewApplication.StartDate" class="form-control" type="date" required id="add-start-date" />
                        </div>
                        <div class="col-6" id="add-end-container" style="display:none;">
                            <label class="form-label fw-semibold">To Date</label>
                            <input asp-for="NewApplication.EndDate" class="form-control" type="date" required id="add-end-date" />
                        </div>
                    </div>
                    <div id="add-sandwich-warning" class="alert alert-warning small py-2 mb-3" style="display:none;">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i> <span id="add-sandwich-text"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold d-flex justify-content-between">
                            Application Number
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="add-auto-app-no" asp-for="AutoGenerate">
                                <label class="form-check-label small" for="add-auto-app-no">Auto-generate</label>
                            </div>
                        </label>
                        <div class="input-group">
                            <input asp-for="NewApplication.ApplicationNumber" class="form-control" readonly id="add-app-no" value="@ViewData["NextAppNo"]" />
                            <span class="input-group-text text-muted small" id="add-app-no-loading" style="display:none;">Loading...</span>
                        </div>
                        <div class="form-text">Leave blank if tracking number is not required.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Day Type</label>
                        <select asp-for="NewApplication.DayType" class="form-select">
                            <option value="Full Day">Full Day</option>
                            <option value="First Half">First Half (0.5 day)</option>
                            <option value="Second Half">Second Half (0.5 day)</option>
                        </select>
                    </div>
                    <div class="mb-3" id="add-sandwich-toggle" style="display:none;">
                        <div class="form-check form-switch px-0">
                            <label class="form-label fw-semibold d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-layers text-primary me-2"></i>Skip Weekoff Sandwich Rule</span>
                                <input class="form-check-input ms-2 mt-0" type="checkbox" role="switch" asp-for="NewApplication.IgnoreSandwichRule" id="add-skip-sandwich">
                            </label>
                            <div class="form-text small mt-0">If checked, any adjacent weekoffs will remain standard weekoffs and will not be converted to leaves.</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Reason / Remarks</label>
                        <textarea asp-for="NewApplication.Reason" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i>Save Leave Record</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Leave Modal -->
<div class="modal fade" id="editLeaveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                <input type="hidden" asp-for="EditApplication.Id" id="edit-id" />
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold"><i class="bi bi-pencil me-2 text-primary"></i>Edit Leave Record</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body pt-3">
                    <div asp-validation-summary="All" class="alert alert-danger small mb-3"></div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Employee</label>
                        <input type="text" id="edit-emp-name" class="form-control-plaintext fw-bold" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Leave Type</label>
                        <select asp-for="EditApplication.LeaveTypeId" id="edit-type" class="form-select" required>
                            @foreach (var type in Model.LeaveTypes)
                            {
                                <option value="@type.Id">@type.Name (@type.Code)</option>
                            }
                        </select>
                        <div id="edit-balance-info" class="mt-1 small text-muted" style="display:none;">
                            Available Balance: <span id="edit-balance-val" class="fw-bold">0</span> days
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Duration</label>
                        <div class="d-flex gap-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="edit-duration" id="edit-single-day" value="single">
                                <label class="form-check-label" for="edit-single-day">Single Day</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="edit-duration" id="edit-multiple-days" value="multiple">
                                <label class="form-check-label" for="edit-multiple-days">Multiple Days</label>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-6" id="edit-start-container">
                            <label class="form-label fw-semibold" id="edit-date-label">Date</label>
                            <input asp-for="EditApplication.StartDate" id="edit-start" class="form-control" type="date" required />
                        </div>
                        <div class="col-6" id="edit-end-container" style="display:none;">
                            <label class="form-label fw-semibold">To Date</label>
                            <input asp-for="EditApplication.EndDate" id="edit-end" class="form-control" type="date" required />
                        </div>
                    </div>
                    <div id="edit-sandwich-warning" class="alert alert-warning small py-2 mb-3" style="display:none;">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i> <span id="edit-sandwich-text"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Day Type</label>
                        <select asp-for="EditApplication.DayType" id="edit-day-type" class="form-select">
                            <option value="Full Day">Full Day</option>
                            <option value="First Half">First Half (0.5 day)</option>
                            <option value="Second Half">Second Half (0.5 day)</option>
                        </select>
                    </div>
                    <div class="mb-3" id="edit-sandwich-toggle" style="display:none;">
                        <div class="form-check form-switch px-0">
                            <label class="form-label fw-semibold d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-layers text-primary me-2"></i>Skip Weekoff Sandwich Rule</span>
                                <input class="form-check-input ms-2 mt-0" type="checkbox" role="switch" asp-for="EditApplication.IgnoreSandwichRule" id="edit-skip-sandwich">
                            </label>
                            <div class="form-text small mt-0">If checked, any adjacent weekoffs will remain standard weekoffs and will not be converted to leaves.</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Reason / Remarks</label>
                        <textarea asp-for="EditApplication.Reason" id="edit-reason" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i>Update Leave Record</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            window.editLeave = function(id, typeId, start, end, reason, empName, dayType, empId, ignoreSandwich) {
                document.getElementById('edit-id').value = id;
                document.getElementById('edit-start').value = start;
                document.getElementById('edit-end').value = end;
                document.getElementById('edit-reason').value = reason;
                document.getElementById('edit-emp-name').innerText = empName;
                document.getElementById('edit-day-type').value = dayType || 'Full Day';
                document.getElementById('edit-skip-sandwich').checked = ignoreSandwich;
                $("#editLeaveModal").data("emp-id", empId);
                
                // Set duration radio
                if (start === end) {
                    $("#edit-single-day").prop("checked", true).trigger('change');
                } else {
                    $("#edit-multiple-days").prop("checked", true).trigger('change');
                }

                fetchEligibleLeaveTypes(empId, "edit-type", typeId, start);
                new bootstrap.Modal(document.getElementById('editLeaveModal')).show();
            };

            $("#edit-start").change(function() {
                var empId = $("#editLeaveModal").data("emp-id");
                var selectedTypeId = $("#edit-type").val();
                if (empId) {
                    fetchEligibleLeaveTypes(empId, "edit-type", selectedTypeId, $(this).val());
                }
            });

            function checkBalanceLocal(mode, forcedEmpId) {
                var empId = forcedEmpId || (mode === 'add' ? $("#NewApplication_EmployeeId").val() : $("#editLeaveModal").data("emp-id"));
                var typeId = (mode === 'add') ? $("#add-leave-type").val() : $("#edit-type").val();
                var date = (mode === 'add') ? $("#add-start-date").val() : $("#edit-start").val();
                var appId = (mode === 'edit') ? $("#edit-id").val() : "";
                if (!typeId || !date || !empId) { $(`#${mode}-balance-info`).hide(); return; }

                // Sync end date if single day
                if (mode === 'add' && $('input[name="duration"]:checked').val() === 'single') {
                    $("#add-end-date").val(date);
                } else if (mode === 'edit' && $('input[name="edit-duration"]:checked').val() === 'single') {
                    $("#edit-end").val(date);
                }

                $.get(`?handler=CheckBalance&employeeId=${empId}&leaveTypeId=${typeId}&date=${date}&currentAppId=${appId}`, function(data) {
                    var val = $(`#${mode}-balance-val`);
                    val.text(data.remaining);
                    val.toggleClass('text-danger', data.remaining <= 0).toggleClass('text-success', data.remaining > 0);
                    $(`#${mode}-balance-info`).show();
                });
            }

            function checkSandwichLocal(mode, forcedEmpId) {
                var empId = forcedEmpId || (mode === 'add' ? $("#NewApplication_EmployeeId").val() : $("#editLeaveModal").data("emp-id"));
                var start = (mode === 'add') ? $("#add-start-date").val() : $("#edit-start").val();
                var end = (mode === 'add') ? $("#add-end-date").val() : $("#edit-end").val();
                
                if (!empId || !start || !end) { 
                    $(`#${mode}-sandwich-warning`).slideUp(); 
                    $(`#${mode}-sandwich-toggle`).slideUp(); 
                    return; 
                }

                var dayType = (mode === 'add') ? $("#NewApplication_DayType").val() : $("#edit-day-type").val();
                $.get(`?handler=CheckSandwich&employeeId=${empId}&startDate=${start}&endDate=${end}&dayType=${dayType}`, function(data) {
                    if (data.isSandwich) {
                        $(`#${mode}-sandwich-text`).text(data.message);
                        $(`#${mode}-sandwich-warning`).slideDown();
                        $(`#${mode}-sandwich-toggle`).slideDown();
                    } else {
                        $(`#${mode}-sandwich-warning`).slideUp();
                        $(`#${mode}-sandwich-toggle`).slideUp();
                    }
                });
            }

            $("#NewApplication_EmployeeId, #add-leave-type, #add-start-date").change(() => checkBalanceLocal('add'));
            $("#edit-type, #edit-start").change(() => checkBalanceLocal('edit'));

            $("#NewApplication_EmployeeId, #add-start-date, #add-end-date, #NewApplication_DayType").change(() => checkSandwichLocal('add'));
            $("#edit-start, #edit-end, #edit-day-type").change(() => checkSandwichLocal('edit'));

            function updateLeaveAppNo() {
                if (!$("#add-auto-app-no").is(":checked")) return;
                var date = $("#add-start-date").val();
                if (!date) return;
                $("#add-app-no-loading").show(); $("#add-app-no").val('Generating...');
                $.get("?handler=NextAppNo&date=" + date, function (data) {
                    $("#add-app-no").val(data.nextAppNo); $("#add-app-no-loading").hide();
                });
            }

            $("#add-start-date").change(updateLeaveAppNo);

            // Duration Toggles
            $('input[name="duration"]').change(function() {
                if ($(this).val() === 'single') {
                    $("#add-end-container").hide();
                    $("#add-date-label").text("Date");
                    $("#add-end-date").val($("#add-start-date").val());
                } else {
                    $("#add-end-container").show();
                    $("#add-date-label").text("From Date");
                }
                checkSandwichLocal('add');
            });

            $('input[name="edit-duration"]').change(function() {
                if ($(this).val() === 'single') {
                    $("#edit-end-container").hide();
                    $("#edit-date-label").text("Date");
                    $("#edit-end").val($("#edit-start").val());
                } else {
                    $("#edit-end-container").show();
                    $("#edit-date-label").text("From Date");
                }
                checkSandwichLocal('edit');
            });

            $("#add-start-date").on('input change', function() {
                if ($('input[name="duration"]:checked').val() === 'single') {
                    $("#add-end-date").val($(this).val());
                }
            });

            $("#edit-start").on('input change', function() {
                if ($('input[name="edit-duration"]:checked').val() === 'single') {
                    $("#edit-end").val($(this).val());
                }
            });
            
            // Generate Application Number whenever the modal opens
            $('#addLeaveModal').on('show.bs.modal', function() {
                updateLeaveAppNo();
            });

            $("#add-auto-app-no").change(function() {
                if ($(this).is(":checked")) { $("#add-app-no").prop("readonly", true); updateLeaveAppNo(); }
                else { $("#add-app-no").prop("readonly", false).val("").focus(); }
            });

            function fetchEligibleLeaveTypes(employeeId, dropdownId, selectedTypeId, dateStr) {
                if (!employeeId) return;
                var url = "?handler=GetEligibleLeaveTypes&employeeId=" + employeeId;
                if (dateStr) {
                    url += "&date=" + dateStr;
                }
                $.get(url, function (data) {
                    var dropdown = $("#" + dropdownId);
                    dropdown.empty().append('<option value="">— Select Type —</option>');
                    data.forEach(function (type) {
                        var disabledAttr = type.isDisabled ? 'disabled="disabled"' : '';
                        var disabledText = type.isDisabled ? ' [Not Eligible - Probation]' : '';
                        dropdown.append(`<option value="${type.id}" ${selectedTypeId == type.id ? 'selected' : ''} ${disabledAttr}>${type.name} (${type.code})${disabledText}</option>`);
                    });
                    if (selectedTypeId) checkBalanceLocal(dropdownId.startsWith('add') ? 'add' : 'edit', employeeId);
                });
            }

            $("#NewApplication_EmployeeId").change(function() {
                var date = $("#add-start-date").val();
                fetchEligibleLeaveTypes($(this).val(), "add-leave-type", null, date);
            });
            
            $("#add-start-date").change(function() {
                var empId = $("#NewApplication_EmployeeId").val();
                var selectedTypeId = $("#add-leave-type").val();
                if (empId) {
                    fetchEligibleLeaveTypes(empId, "add-leave-type", selectedTypeId, $(this).val());
                }
            });

            @if (!ModelState.IsValid)
            {
                <text>
                // Auto-open modal if there are validation errors
                var isEditError = @(Model.EditApplication?.Id > 0 ? "true" : "false");
                if (isEditError) {
                    var editModal = new bootstrap.Modal(document.getElementById('editLeaveModal'));
                    editModal.show();
                } else {
                    var addModal = new bootstrap.Modal(document.getElementById('addLeaveModal'));
                    addModal.show();
                }
                </text>
            }

            // Clear the form and hide errors when the Add Modal is closed
            $('#addLeaveModal').on('hidden.bs.modal', function () {
                // If there are validation errors, a full page reload is the most reliable way to clear ModelState
                if ($(this).find('.validation-summary-errors').length > 0 || $('.alert-danger').is(':visible')) {
                    window.location.href = window.location.pathname;
                    return;
                }

                var form = $(this).find('form');
                if (form.length > 0) {
                    form[0].reset();
                    form.find('input:not([type=hidden]), select, textarea').val('').removeAttr('value');
                }

                var summary = $(this).find('[data-valmsg-summary=true], .validation-summary-errors, .alert-danger');
                summary.removeClass('validation-summary-errors').addClass('validation-summary-valid').hide();
                summary.find('ul').empty();

                $('#add-balance-info').hide();
                $('#add-sandwich-warning').hide();
                $('#add-sandwich-toggle').hide();
            });

            // Same for the Edit Modal
            $('#editLeaveModal').on('hidden.bs.modal', function () {
                if ($(this).find('.validation-summary-errors').length > 0) {
                    window.location.href = window.location.pathname;
                    return;
                }
                var summary = $(this).find('[data-valmsg-summary=true], .validation-summary-errors, .alert-danger');
                summary.removeClass('validation-summary-errors').addClass('validation-summary-valid').hide();
                summary.find('ul').empty();
            });
        });
    </script>
}
