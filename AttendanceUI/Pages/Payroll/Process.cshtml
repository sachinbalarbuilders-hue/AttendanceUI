@page
@model AttendanceUI.Pages.Payroll.ProcessModel
@using Microsoft.EntityFrameworkCore
@inject AttendanceUI.Data.BiometricAttendanceDbContext _db

@section Styles {
    <style>
        .adjustment-badge {
            font-size: 0.65rem;
            padding: 0.2rem 0.5rem;
            border-radius: 4px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }
        .badge-allowance { background: #ecfdf5; color: #059669; border: 1px solid #b7f4d8; }
        .badge-deduction { background: #fef2f2; color: #dc2626; border: 1px solid #fecaca; }
        .btn-adjust {
            padding: 0.25rem 0.75rem;
            font-size: 0.75rem;
            border-radius: 6px;
            font-weight: 600;
        }
    </style>
}

@{
    ViewData["Title"] = "Process Payroll";
}

<div class="container-fluid pb-5">
    <!-- Page Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h4 class="mb-1 fw-bold">Process Payroll</h4>
            <p class="text-muted mb-0 small">Calculate and generate monthly salaries for employees</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-page="/Payroll/EmployeeSalary/Index" class="btn btn-outline-primary">
                <i class="bi bi-cash me-2"></i>Manage Salaries
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i> @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Quick Stats Summary -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body p-4 text-center">
                    <p class="mb-1 small opacity-75 text-uppercase fw-bold">Total Net Payout</p>
                    <h2 class="mb-0 fw-bold">₹@Model.TotalNetPayout.ToString("N2")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-white">
                <div class="card-body p-4 text-center">
                    <p class="mb-1 small text-muted text-uppercase fw-bold">Employees Processed</p>
                    <h2 class="mb-0 fw-bold text-dark">@Model.ProcessedCount <span class="fs-6 text-muted fw-normal">/ @Model.AvailableEmployees.Count</span></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-white border-start border-success border-4">
                <div class="card-body p-4 text-center">
                    <p class="mb-1 small text-muted text-uppercase fw-bold text-success">Total Allowances</p>
                    <h2 class="mb-0 fw-bold text-success">₹@Model.TotalManualAdjustments.ToString("N2")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-white border-start border-danger border-4">
                <div class="card-body p-4 text-center">
                    <p class="mb-1 small text-muted text-uppercase fw-bold text-danger">Total Deductions</p>
                    <h2 class="mb-0 fw-bold text-danger">₹@Model.TotalManualDeductions.ToString("N2")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Selection Sidebar/Card -->
        <div class="col-xl-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-calendar-check me-2 text-primary"></i>Selection</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-page-handler="ProcessSelected" id="payrollForm">
                        <div class="mb-4">
                            <label class="form-label fw-semibold small text-uppercase text-muted">Select Month</label>
                            <div class="input-group drop-shadow-sm">
                                <span class="input-group-text bg-white border-end-0"><i class="bi bi-calendar3 text-primary"></i></span>
                                <input type="month" asp-for="TargetProcessMonth" class="form-control border-start-0 ps-0" onchange="window.location.href = '?TargetProcessMonth=' + this.value" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold small text-uppercase text-muted">Quick Actions</label>
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-sm btn-soft-primary text-start" onclick="selectAll()">
                                    <i class="bi bi-check-all me-2"></i>Select All Employees
                                </button>
                                <button type="button" class="btn btn-sm btn-soft-secondary text-start" onclick="deselectAll()">
                                    <i class="bi bi-x-circle me-2"></i>Deselect All
                                </button>
                                <button type="button" class="btn btn-sm btn-soft-info text-start" onclick="selectUnprocessed()">
                                    <i class="bi bi-arrow-repeat me-2"></i>Select Unprocessed
                                </button>
                            </div>
                        </div>

                        <div class="pt-2 border-top">
                            <button type="submit" id="processBtn" class="btn btn-primary w-100 py-2 mt-3" @(Model.AvailableEmployees.Any(e => e.HasSalary) ? "" : "disabled")>
                                <i class="bi bi-calculator-fill me-2"></i>Process Selection
                            </button>
                            <p class="text-muted small mt-3 mb-0">
                                <i class="bi bi-info-circle me-1"></i> Selection will process the calculated earnings and deductions for the chosen month.
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Employee List Card -->
        <div class="col-xl-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center pt-4 px-4">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-people me-2 text-primary"></i>Employee Status</h5>
                    <span class="badge bg-soft-primary text-primary px-3">@Model.AvailableEmployees.Count(e => e.HasSalary) Eligible</span>
                </div>
                <div class="card-body p-0">
                    @if (Model.AvailableEmployees.Any())
                    {
                        <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                            <table class="table table-modern align-middle mb-0">
                                <thead class="sticky-top bg-white" style="z-index: 10;">
                                    <tr>
                                        <th width="60" class="ps-4">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="masterCheckbox" onclick="toggleAll(this)">
                                            </div>
                                        </th>
                                        <th>Employee</th>
                                        <th>Department</th>
                                        <th>Gross Salary</th>
                                        <th style="min-width: 150px;">Adjustments</th>
                                        <th class="pe-4">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var emp in Model.AvailableEmployees)
                                {
                                    <tr class="@(!emp.HasSalary ? "opacity-75" : "")">
                                        <td class="ps-4">
                                            <div class="form-check">
                                                <input type="checkbox" 
                                                       name="EmployeeIdsToProcess" 
                                                       value="@emp.EmployeeId" 
                                                       class="form-check-input employee-checkbox"
                                                       onchange="updateProcessButton()"
                                                       form="payrollForm"
                                                       data-processed="@emp.AlreadyProcessed.ToString().ToLower()"
                                                       @(emp.AlreadyProcessed ? "checked" : "")
                                                       @(!emp.HasSalary ? "disabled" : "") />
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="avatar-circle small">
                                                    @(string.IsNullOrEmpty(emp.EmployeeName) ? "?" : emp.EmployeeName[0].ToString().ToUpper())
                                                </div>
                                                <div class="fw-semibold">@emp.EmployeeName</div>
                                            </div>
                                        </td>
                                        <td class="text-muted small">@emp.Department</td>
                                        <td><span class="fw-bold text-dark">₹@emp.GrossSalary.ToString("N2")</span></td>
                                        <td>
                                            <input type="hidden" name="AdjustmentData[@emp.EmployeeId]" id="adjData_@emp.EmployeeId" value='@System.Text.Json.JsonSerializer.Serialize(emp.Adjustments)' form="payrollForm" />
                                            
                                            <div class="d-flex flex-column gap-1">
                                                <div id="badgeContainer_@emp.EmployeeId" class="d-flex flex-wrap gap-1">
                                                    @foreach (var adj in emp.Adjustments)
                                                    {
                                                        var badgeClass = adj.Type == "Allowance" ? "badge-allowance" : "badge-deduction";
                                                        var icon = adj.Type == "Allowance" ? "bi-plus-circle-fill" : "bi-dash-circle-fill";
                                                        <span class="adjustment-badge @badgeClass" title="@adj.Name">
                                                            <i class="bi @icon"></i> ₹@adj.Amount.ToString("0.##")
                                                        </span>
                                                    }
                                                </div>
                                                <button type="button" class="btn btn-adjust btn-outline-primary" onclick="openAdjustmentModal(@emp.EmployeeId, '@emp.EmployeeName.Replace("'", "\\'")')">
                                                    <i class="bi bi-plus-slash-minus me-1"></i> Adjust
                                                </button>
                                            </div>
                                        </td>
                                        <td class="pe-4">
                                            @if (!emp.HasSalary)
                                            {
                                                <span class="badge bg-soft-warning text-warning fw-semibold rounded-pill px-3">No Salary Set</span>
                                            }
                                            else if (emp.AlreadyProcessed)
                                            {
                                                <span class="badge bg-soft-success text-success fw-semibold rounded-pill px-3">Processed</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-secondary text-secondary fw-semibold rounded-pill px-3">Pending</span>
                                            }
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-person-exclamation fs-1 text-muted opacity-25"></i>
                            <p class="mt-2 text-muted">No employees found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.PayrollRecords.Any())
    {
        <!-- Summary Dashboard -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center pt-4 px-4">
                    <h5 class="mb-0 fw-bold">Payroll Summary <span class="text-muted fw-normal small">for @Model.TargetProcessMonth</span></h5>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-sm btn-outline-primary" id="bulkPrintBtn" onclick="bulkPrintSelected()" disabled>
                            <i class="bi bi-printer me-1"></i> Bulk Print Selected
                        </button>
                        <div class="text-muted small">@Model.PayrollRecords.Count Records</div>
                    </div>
                </div>
                
                <div class="card border-0 shadow-sm overflow-hidden">
                    <div class="table-responsive">
                        <table class="table table-modern align-middle mb-0">
                            <thead class="bg-light">
                                <tr class="small text-uppercase text-muted">
                                    <th class="ps-4" width="40">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" onclick="toggleSummaryAll(this)">
                                        </div>
                                    </th>
                                    <th>Employee</th>
                                    <th class="text-center">Days (P/A/L/W/H)</th>
                                    <th class="text-center">Payable</th>
                                    <th>Earnings</th>
                                    <th>Deductions</th>
                                    <th>Net Salary</th>
                                    <th class="pe-4">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.PayrollRecords)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input summary-checkbox" value="@item.Id" onchange="updateBulkPrintBtn()">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="fw-bold overflow-hidden text-nowrap" style="max-width: 150px;" title="@item.Employee?.EmployeeName">
                                            @item.Employee?.EmployeeName
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-soft-success text-success me-1" title="Present">@item.PresentDays.ToString("0.#") P</span>
                                        <span class="badge bg-soft-danger text-danger me-1" title="Absent">@item.AbsentDays.ToString("0.#") A</span>
                                        <span class="badge bg-soft-info text-info me-1" title="Paid Leave">@item.PaidLeaves.ToString("0.#") L</span>
                                        <span class="badge bg-soft-warning text-warning me-1" title="Weekoff">@item.Weekoffs.ToString("0.#") W</span>
                                        <span class="badge bg-soft-secondary text-secondary" title="Holiday">@item.Holidays.ToString("0.#") H</span>
                                    </td>
                                    <td class="text-center fw-bold text-primary">@item.PayableDays.ToString("0.#")</td>
                                    <td class="text-success small">
                                        ₹@item.TotalEarnings.ToString("N0")
                                        <button type="button" class="btn btn-sm p-0 ms-1 text-muted" onclick="showBreakdown(@item.Id, '@item.Employee?.EmployeeName', 'Earning')">
                                            <i class="bi bi-info-circle"></i>
                                        </button>
                                    </td>
                                    <td class="text-danger small">
                                        ₹@item.TotalDeductions.ToString("N0")
                                        <button type="button" class="btn btn-sm p-0 ms-1 text-muted" onclick="showBreakdown(@item.Id, '@item.Employee?.EmployeeName', 'Deduction')">
                                            <i class="bi bi-info-circle"></i>
                                        </button>
                                    </td>
                                    <td class="fw-bold">₹@item.NetSalary.ToString("N2")</td>
                                    <td class="pe-4">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <span class="badge @(item.Status == "Processed" ? "bg-soft-success text-success" : 
                                                                  item.Status == "Approved" ? "bg-soft-primary text-primary" :
                                                                  item.Status == "Paid" ? "bg-soft-info text-info" : "bg-soft-secondary text-secondary") rounded-pill px-3 fw-semibold">
                                                @item.Status
                                            </span>
                                            <a asp-page="/Payroll/Payslip" asp-route-id="@item.Id" class="btn btn-icon-soft" title="View Payslip">
                                                <i class="bi bi-file-earmark-richtext"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                            <tfoot class="bg-light border-top-0">
                                <tr class="fw-bold align-middle">
                                    <td colspan="4" class="ps-4">
                                        <span class="text-uppercase small text-muted me-2">TOTALS</span>
                                    </td>
                                    <td class="text-success">₹@Model.PayrollRecords.Sum(p => p.TotalEarnings).ToString("N0")</td>
                                    <td class="text-danger">₹@Model.PayrollRecords.Sum(p => p.TotalDeductions).ToString("N0")</td>
                                    <td class="text-primary fs-5">₹@Model.PayrollRecords.Sum(p => p.NetSalary).ToString("N2")</td>
                                    <td class="pe-4 text-end">
                                        <span class="badge bg-white text-dark border rounded-pill">@Model.PayrollRecords.Count Records</span>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Breakdown Modal -->
    <div class="modal fade" id="breakdownModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="border-radius: 15px;">
                <div class="modal-header bg-light border-0 px-4 pt-4">
                    <h5 class="modal-title fw-bold" id="modalTitle">Payroll Breakdown</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4" id="modalBody">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status"></div>
                    </div>
                </div>
                <div class="modal-footer border-0 px-4 pb-4">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Adjustment Entry Modal -->
    <div class="modal fade" id="adjustmentEntryModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="border-radius: 12px;">
                <div class="modal-header border-0 pb-0 px-4 pt-4">
                    <h6 class="modal-title fw-bold" id="adjModalTitle">Manage Adjustments</h6>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" id="currentEmpId" />
                    
                    <!-- Current Adjustments List -->
                    <div class="mb-4 bg-light p-3 rounded-3" style="min-height: 100px;">
                        <label class="form-label small fw-bold text-muted mb-2">Applied Adjustments</label>
                        <div id="activeAdjustmentsList" class="d-flex flex-wrap gap-2">
                            <!-- JS will populate this -->
                            <div class="text-muted small italic py-2">No adjustments added.</div>
                        </div>
                    </div>

                    <div class="border-top pt-3">
                        <label class="form-label small fw-bold text-primary mb-3">Add New Adjustment</label>
                        <div class="row g-2">
                            <div class="col-6">
                                <label class="form-label small text-muted mb-1">Type</label>
                                <select id="adjType" class="form-select form-select-sm">
                                    <option value="Allowance">Allowance (+)</option>
                                    <option value="Deduction">Deduction (-)</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label class="form-label small text-muted mb-1">Amount</label>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text bg-light text-muted">₹</span>
                                    <input type="number" id="adjAmount" class="form-control" placeholder="0.00" step="0.01" />
                                </div>
                            </div>
                            <div class="col-12 mt-2">
                                <label class="form-label small text-muted mb-1">Reason</label>
                                <input type="text" id="adjReason" class="form-control form-control-sm" placeholder="e.g., Performance Bonus, Fine" />
                            </div>
                            <div class="col-12 mt-3">
                                <button type="button" class="btn btn-sm btn-soft-primary w-100" onclick="addAdjustmentToList()">
                                    <i class="bi bi-plus-lg me-1"></i> Add to List
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 p-3 pt-0">
                    <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-sm btn-primary px-4" onclick="saveAdjustmentsToForm()">Save All Changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function showBreakdown(payrollId, employeeName, filter) {
            const modalElement = document.getElementById('breakdownModal');
            const modal = bootstrap.Modal.getOrCreateInstance(modalElement);
            
            document.getElementById('modalTitle').innerText = `${employeeName} - ${filter}s`;
            document.getElementById('modalBody').innerHTML = '<div class="text-center py-5"><div class="spinner-border text-primary" role="status"></div><div class="mt-2 text-muted small">Loading details...</div></div>';
            modal.show();

            try {
                // Point to the dedicated standalone API page
                const url = `/Payroll/PayrollDetailsApi?id=${payrollId}`;
                console.log('Fetching from standalone API:', url);

                const response = await fetch(url);
                const contentType = response.headers.get("content-type");
                const text = await response.text();
                
                if (!response.ok) {
                    throw new Error(`Server Error (${response.status}): ${text.substring(0, 100)}`);
                }

                if (!contentType || !contentType.includes("application/json")) {
                    console.error('Non-JSON response received. Content-Type:', contentType);
                    console.log('Response snippet:', text.substring(0, 200));

                    if (text.includes('login') || text.includes('Account/Login') || response.redirected) {
                        throw new Error('Your session has expired or you are unauthorized. Please refresh and login again.');
                    }
                    throw new Error(`Expected JSON but got ${contentType || 'HTML'}. Snippet: ${text.substring(0, 50)}...`);
                }

                const data = JSON.parse(text);
                
                if (!Array.isArray(data)) {
                    throw new Error('Data format error: Expected an array.');
                }

                let html = '<div class="list-group list-group-flush border-top">';
                const filtered = data.filter(d => d.componentType === filter);
                
                if (filtered.length === 0) {
                    html += `
                        <div class="p-5 text-center">
                            <i class="bi bi-info-circle text-muted fs-2 mb-2"></i>
                            <div class="text-muted">No ${filter.toLowerCase()} items found</div>
                        </div>`;
                } else {
                    filtered.forEach(item => {
                        html += `
                            <div class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center">
                                <div class="pe-3">
                                    <div class="fw-bold text-dark">${item.componentName}</div>
                                    ${item.remarks ? `<div class="extra-small text-muted mt-1 text-wrap" style="max-width: 250px;">${item.remarks}</div>` : ''}
                                </div>
                                <div class="fw-bold text-nowrap fs-6 ${filter === 'Earning' ? 'text-success' : 'text-danger'}">
                                    ₹${(item.amount || 0).toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}
                                </div>
                            </div>`;
                    });
                }
                html += '</div>';
                document.getElementById('modalBody').innerHTML = html;
            } catch (err) {
                console.error('Payroll Details Error:', err);
                document.getElementById('modalBody').innerHTML = `
                    <div class="text-center py-5">
                        <i class="bi bi-exclamation-triangle-fill text-danger fs-1 mb-3"></i>
                        <div class="text-danger fw-bold">Failed to load details</div>
                        <div class="small text-muted mt-2 px-4" style="word-break: break-word;">${err.message}</div>
                        <button class="btn btn-sm btn-primary mt-4 rounded-pill px-4" onclick="showBreakdown(${payrollId}, '${employeeName.replace(/'/g, "\\'")}', '${filter}')">
                            <i class="bi bi-arrow-clockwise me-1"></i> Try Again
                        </button>
                    </div>`;
            }
        }
        let adjModal;
        let currentAdjustments = []; // Local list for the currently opened modal

        document.addEventListener('DOMContentLoaded', () => {
            adjModal = new bootstrap.Modal(document.getElementById('adjustmentEntryModal'));
            updateProcessButton();
        });

        function openAdjustmentModal(empId, empName) {
            document.getElementById('currentEmpId').value = empId;
            document.getElementById('adjModalTitle').innerText = `Adjustments: ${empName}`;
            
            // Clear inputs
            document.getElementById('adjAmount').value = "";
            document.getElementById('adjReason').value = "";
            
            // Load existing list from hidden input
            const hiddenInput = document.getElementById(`adjData_${empId}`);
            try {
                currentAdjustments = JSON.parse(hiddenInput.value || "[]");
            } catch (e) {
                currentAdjustments = [];
            }
            
            renderAdjustmentsList();
            adjModal.show();
        }

        function renderAdjustmentsList() {
            const listDiv = document.getElementById('activeAdjustmentsList');
            if (currentAdjustments.length === 0) {
                listDiv.innerHTML = '<div class="text-muted small italic py-2 w-100">No adjustments added.</div>';
                return;
            }

            listDiv.innerHTML = currentAdjustments.map((adj, index) => {
                const badgeClass = adj.Type === 'Allowance' ? 'badge-allowance' : 'badge-deduction';
                const icon = adj.Type === 'Allowance' ? 'bi-plus-circle' : 'bi-dash-circle';
                const symbol = adj.Type === 'Allowance' ? '+' : '-';
                
                return `
                    <div class="adjustment-badge ${badgeClass} border d-flex align-items-center gap-2 py-1 px-2 shadow-sm" style="font-size: 0.75rem;">
                        <i class="bi ${icon}"></i> 
                        <span class="fw-bold">${symbol}₹${parseFloat(adj.Amount).toFixed(2)}</span>
                        <span class="opacity-75">| ${adj.Name || 'Ad-hoc'}</span>
                        <button type="button" class="btn-close ms-1" style="font-size: 0.5rem;" onclick="removeAdjustmentFromList(${index})"></button>
                    </div>
                `;
            }).join('');
        }

        function addAdjustmentToList() {
            const amount = document.getElementById('adjAmount').value;
            const reason = document.getElementById('adjReason').value;
            const type = document.getElementById('adjType').value;

            if (!amount || parseFloat(amount) <= 0) {
                alert("Please enter a valid amount.");
                return;
            }

            currentAdjustments.push({
                Name: reason || (type === "Allowance" ? "Manual Allowance" : "Manual Deduction"),
                Amount: parseFloat(amount),
                Type: type
            });

            // Clear inputs for next entry
            document.getElementById('adjAmount').value = "";
            document.getElementById('adjReason').value = "";
            
            renderAdjustmentsList();
        }

        function removeAdjustmentFromList(index) {
            currentAdjustments.splice(index, 1);
            renderAdjustmentsList();
        }

        function saveAdjustmentsToForm() {
            const empId = document.getElementById('currentEmpId').value;
            const hiddenInput = document.getElementById(`adjData_${empId}`);
            const badgeContainer = document.getElementById(`badgeContainer_${empId}`);
            
            // Update hidden input JSON
            hiddenInput.value = JSON.stringify(currentAdjustments);
            
            // Update table badges
            badgeContainer.innerHTML = currentAdjustments.map(adj => {
                const badgeClass = adj.Type === 'Allowance' ? 'badge-allowance' : 'badge-deduction';
                const icon = adj.Type === 'Allowance' ? 'bi-plus-circle-fill' : 'bi-dash-circle-fill';
                return `<span class="adjustment-badge ${badgeClass}" title="${adj.Name}">
                    <i class="bi ${icon}"></i> ₹${parseFloat(adj.Amount).toFixed(2)}
                </span>`;
            }).join('');
            
            adjModal.hide();
        }

        function toggleAll(master) {
            document.querySelectorAll('.employee-checkbox:not(:disabled)').forEach(cb => cb.checked = master.checked);
            updateProcessButton();
        }

        function selectAll() {
            document.querySelectorAll('.employee-checkbox:not(:disabled)').forEach(cb => cb.checked = true);
            const m = document.getElementById('masterCheckbox');
            if (m) m.checked = true;
            updateProcessButton();
        }

        function deselectAll() {
            document.querySelectorAll('.employee-checkbox').forEach(cb => cb.checked = false);
            const m = document.getElementById('masterCheckbox');
            if (m) m.checked = false;
            updateProcessButton();
        }

        function selectUnprocessed() {
            document.querySelectorAll('.employee-checkbox').forEach(cb => {
                if (!cb.disabled && cb.dataset.processed === 'false') {
                    cb.checked = true;
                } else {
                    cb.checked = false;
                }
            });
            const m = document.getElementById('masterCheckbox');
            if (m) m.checked = false;
            updateProcessButton();
        }

        function toggleSummaryAll(master) {
            document.querySelectorAll('.summary-checkbox').forEach(cb => cb.checked = master.checked);
            updateBulkPrintBtn();
        }

        function updateBulkPrintBtn() {
            const checked = document.querySelectorAll('.summary-checkbox:checked').length;
            document.getElementById('bulkPrintBtn').disabled = checked === 0;
            document.getElementById('bulkPrintBtn').innerHTML = `<i class="bi bi-printer me-1"></i> Bulk Print (${checked})`;
        }

        function bulkPrintSelected() {
            const ids = Array.from(document.querySelectorAll('.summary-checkbox:checked')).map(cb => cb.value).join(',');
            if (ids) {
                window.open(`/Payroll/BulkPayslip?ids=${ids}`, '_blank');
            }
        }

        // Initialize state on load
        document.addEventListener('DOMContentLoaded', updateProcessButton);
    </script>
}
