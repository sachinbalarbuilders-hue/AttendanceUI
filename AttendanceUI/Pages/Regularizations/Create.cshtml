@page
@model AttendanceUI.Pages.Regularizations.CreateModel

@{
    ViewData["Title"] = "New Regularization Request";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-soft-primary stat-icon me-3">
                            <i class="bi bi-plus-circle"></i>
                        </div>
                        <div>
                            <h4 class="mb-0">New Regularization Request</h4>
                            <p class="text-muted small mb-0">Create a new request to regularize attendance records.</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger soft-alert mb-4" role="alert"></div>
                        
                        <div class="row g-3">
                            <!-- Employee Selection -->
                            <div class="col-12">
                                <label asp-for="Regularization.EmployeeId" class="form-label fw-medium">
                                    <i class="bi bi-person me-1"></i> Employee
                                </label>
                                <select asp-for="Regularization.EmployeeId" class="form-select select-modern" asp-items="ViewBag.EmployeeId"></select>
                                <span asp-validation-for="Regularization.EmployeeId" class="text-danger small"></span>
                            </div>

                            <!-- Request Type -->
                            <div class="col-md-6">
                                <label asp-for="Regularization.RequestType" class="form-label fw-medium">
                                    <i class="bi bi-tag me-1"></i> Request Type
                                </label>
                                <select asp-for="Regularization.RequestType" class="form-select select-modern" id="Regularization_RequestType">
                                    <option value="Late Coming">Late Coming</option>
                                    <option value="Early Go">Early Go</option>
                                    <option value="Missed Punch">Missed Punch</option>
                                </select>
                                <span asp-validation-for="Regularization.RequestType" class="text-danger small"></span>
                            </div>

                            <!-- Request Date -->
                            <div class="col-md-6">
                                <label asp-for="Regularization.RequestDate" class="form-label fw-medium">
                                    <i class="bi bi-calendar3 me-1"></i> Date
                                </label>
                                <input asp-for="Regularization.RequestDate" class="form-control" type="date" id="RequestDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="Regularization.RequestDate" class="text-danger small"></span>
                            </div>

                            <!-- Waive Penalty -->
                            <div class="col-12">
                                <div class="px-3 py-2 bg-light rounded-3 border">
                                    <div class="form-check form-switch d-flex justify-content-between align-items-center p-0">
                                        <label class="form-check-label fw-medium" for="waivePenalty">
                                            <i class="bi bi-shield-check me-1"></i> Waive Attendance Penalty
                                        </label>
                                        <input class="form-check-input ms-2" type="checkbox" role="switch" id="waivePenalty" asp-for="Regularization.WaivePenalty" checked>
                                    </div>
                                    <div class="form-text text-muted small">
                                        If unchecked, the request is recorded for tracking but penalties (like Half Day for lateness) will still apply.
                                    </div>
                                </div>
                            </div>

                            <!-- Application Number -->
                            <div class="col-12">
                                <div class="p-3 bg-light rounded-3 border">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <label class="form-label fw-medium mb-0">
                                            <i class="bi bi-hash me-1"></i> Application Number
                                        </label>
                                        <div class="form-check form-switch small">
                                            <input class="form-check-input" type="checkbox" id="autoAppNo" asp-for="AutoGenerate">
                                            <label class="form-check-label" for="autoAppNo">Auto-generate</label>
                                        </div>
                                    </div>
                                    <div class="input-group">
                                        <input asp-for="Regularization.ApplicationNumber" class="form-control" readonly id="ApplicationNumber" value="@ViewData["NextAppNo"]" />
                                        <span class="input-group-text bg-white text-muted small" id="appNoLoading" style="display:none;">
                                            <span class="spinner-border spinner-border-sm me-1" role="status"></span> Loading...
                                        </span>
                                    </div>
                                    <div class="form-text text-muted small mt-1">
                                        Tracking number for this application. Leave blank if not required.
                                    </div>
                                </div>
                            </div>

                            <!-- Punch Status Preview -->
                            <div class="col-12" id="punchStatusGroup" style="display:none;">
                                <div class="card border border-primary bg-light border-dashed mb-3">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <h6 class="mb-0 text-primary fw-bold">Current Machine Punches</h6>
                                            <span id="shiftInfo" class="badge bg-soft-primary text-primary px-2 py-1">Shift: --:-- - --:--</span>
                                        </div>
                                        <div class="row g-2 text-center">
                                            <div class="col-6">
                                                <div class="p-2 border rounded bg-white">
                                                    <div class="text-muted small">Clock In</div>
                                                    <div id="statusInTime" class="fw-bold">--:--</div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="p-2 border rounded bg-white">
                                                    <div class="text-muted small">Clock Out</div>
                                                    <div id="statusOutTime" class="fw-bold">--:--</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Punch Location Selector -->
                            <div class="col-12" id="punchLocationGroup" style="display:none;">
                                <label class="form-label fw-medium">What needs to be filled?</label>
                                <div class="d-flex flex-wrap gap-3 p-3 bg-light rounded-3 border mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="punchTarget" id="targetIn" value="in" checked>
                                        <label class="form-check-label" for="targetIn">Punch In Only</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="punchTarget" id="targetOut" value="out">
                                        <label class="form-check-label" for="targetOut">Punch Out Only</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="punchTarget" id="targetBoth" value="both">
                                        <label class="form-check-label" for="targetBoth">Both (Full Day)</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Punch Time (Conditional) -->
                            <div class="col-md-6" id="punchInTimeGroup" style="display:none;">
                                <div class="p-3 bg-soft-warning rounded-3 border border-warning border-dashed">
                                    <label asp-for="Regularization.PunchTimeIn" class="form-label fw-medium text-dark">
                                        <i class="bi bi-box-arrow-in-right me-1"></i> Punch IN Time
                                    </label>
                                    <input asp-for="Regularization.PunchTimeIn" class="form-control" type="datetime-local" id="Regularization_PunchTimeIn" />
                                </div>
                            </div>

                            <div class="col-md-6" id="punchOutTimeGroup" style="display:none;">
                                <div class="p-3 bg-soft-warning rounded-3 border border-warning border-dashed">
                                    <label asp-for="PunchTimeOut" class="form-label fw-medium text-dark">
                                        <i class="bi bi-box-arrow-left me-1"></i> Punch OUT Time
                                    </label>
                                    <input asp-for="PunchTimeOut" class="form-control" type="datetime-local" id="Regularization_PunchTimeOut" />
                                </div>
                            </div>

                            <!-- Reason -->
                            <div class="col-12">
                                <label asp-for="Regularization.Reason" class="form-label fw-medium">
                                    <i class="bi bi-chat-left-text me-1"></i> Reason / Remarks
                                </label>
                                <textarea asp-for="Regularization.Reason" class="form-control" rows="4" placeholder="Briefly explain the reason for this request..."></textarea>
                                <span asp-validation-for="Regularization.Reason" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top d-flex flex-wrap gap-2">
                            <button type="submit" class="btn btn-primary d-flex align-items-center gap-2 px-4 py-2">
                                <i class="bi bi-check-circle"></i> Submit Request
                            </button>
                            <a asp-page="Index" class="btn btn-light d-flex align-items-center gap-2 px-4 py-2 text-dark">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .select-modern { background-color: #fff; }
    .border-dashed { border-style: dashed !important; }
    .soft-alert { background-color: #fee2e2; border: none; color: #991b1b; border-radius: 0.5rem; }
    .bg-soft-warning { background-color: #fef3c7; }
    .bg-soft-primary { background-color: #e0e7ff; }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var currentShift = null;

            function formatDateTimeForInput(dateStr, timeStr) {
                if (!dateStr || !timeStr) return "";
                // timeStr is "HH:mm", dateStr is "yyyy-MM-dd"
                return dateStr + "T" + timeStr;
            }

            function autoFillTimes() {
                var type = $("#Regularization_RequestType").val();
                if (type !== "Missed Punch" || !currentShift) return;

                var target = $("input[name='punchTarget']:checked").val();
                var date = $("#RequestDate").val();

                if (target === "in" || target === "both") {
                    $("#Regularization_PunchTimeIn").val(formatDateTimeForInput(date, currentShift.start));
                } else {
                    $("#Regularization_PunchTimeIn").val('');
                }

                if (target === "out" || target === "both") {
                    $("#Regularization_PunchTimeOut").val(formatDateTimeForInput(date, currentShift.end));
                } else {
                    $("#Regularization_PunchTimeOut").val('');
                }
            }

            function updateVisibility() {
                var type = $("#Regularization_RequestType").val();
                var target = $("input[name='punchTarget']:checked").val();
                
                if (type === "Missed Punch") {
                    $("#punchStatusGroup, #punchLocationGroup").fadeIn(200);
                    
                    if (target === "in") {
                        $("#punchInTimeGroup").show();
                        $("#punchOutTimeGroup").hide();
                    } else if (target === "out") {
                        $("#punchInTimeGroup").hide();
                        $("#punchOutTimeGroup").show();
                    } else {
                        $("#punchInTimeGroup, #punchOutTimeGroup").show();
                    }
                    autoFillTimes();
                } else {
                    $("#punchStatusGroup, #punchLocationGroup, #punchInTimeGroup, #punchOutTimeGroup").fadeOut(200);
                }
            }

            function fetchPunches() {
                var empId = $("#Regularization_EmployeeId").val();
                var date = $("#RequestDate").val();
                if (!empId || !date) return;

                $.get("?handler=ExistingPunch&employeeId=" + empId + "&date=" + date, function (data) {
                    currentShift = data.shift;

                    if (data.punch) {
                        $("#statusInTime").text(data.punch.inTime || "Missing").toggleClass("text-danger", !data.punch.inTime).toggleClass("text-success", !!data.punch.inTime);
                        $("#statusOutTime").text(data.punch.outTime || "Missing").toggleClass("text-danger", !data.punch.outTime).toggleClass("text-success", !!data.punch.outTime);
                        
                        // Smart Auto-selection
                        if (data.punch.inTime && !data.punch.outTime) {
                            $("#targetOut").prop("checked", true);
                        } else if (!data.punch.inTime && data.punch.outTime) {
                            $("#targetIn").prop("checked", true);
                        } else if (!data.punch.inTime && !data.punch.outTime) {
                            $("#targetBoth").prop("checked", true);
                        }
                    } else {
                        $("#statusInTime, #statusOutTime").text("Missing").addClass("text-danger").removeClass("text-success");
                        $("#targetBoth").prop("checked", true);
                    }

                    if (data.shift) {
                        $("#shiftInfo").text("Shift: " + data.shift.start + " - " + data.shift.end);
                    } else {
                        $("#shiftInfo").text("Shift: Not Assigned");
                    }
                    updateVisibility();
                });
            }

            $("#Regularization_RequestType, input[name='punchTarget']").change(updateVisibility);
            $("#Regularization_EmployeeId, #RequestDate").change(fetchPunches);
            
            // Initialization
            fetchPunches();
            
            function updateAppNo() {
                if (!$("#autoAppNo").is(":checked")) return;
                var date = $("#RequestDate").val();
                if (!date) return;
                $("#appNoLoading").show();
                $("#ApplicationNumber").val('Generating...');
                $.get("?handler=NextAppNo&date=" + date, function (data) {
                    $("#ApplicationNumber").val(data.nextAppNo);
                    $("#appNoLoading").hide();
                });
            }

            $("#RequestDate").change(updateAppNo);
            $("#autoAppNo").change(function() {
                if($(this).is(":checked")) {
                    $("#ApplicationNumber").prop("readonly", true);
                    updateAppNo();
                } else {
                    $("#ApplicationNumber").prop("readonly", false).val("").focus();
                }
            });
        });
    </script>
}
