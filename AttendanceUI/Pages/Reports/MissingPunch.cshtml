@page
@model AttendanceUI.Pages.Reports.MissingPunchModel
@{
    ViewData["Title"] = "Missing Punch Report";
}

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <div>
        <h4 class="mb-1 fw-bold"><i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>Missing Punch Report</h4>
        <p class="text-muted mb-0 small">Track employees with incomplete attendance records</p>
    </div>
    <form method="get" class="d-flex gap-2 align-items-center flex-wrap">
        <select name="Month" class="form-select" asp-for="Month" style="width:140px;">
            @for (int i = 1; i <= 12; i++)
            {
                <option value="@i">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
            }
        </select>
        <input type="number" name="Year" class="form-control" asp-for="Year" style="width:90px;" />
        <div class="form-check form-switch mb-0 ps-0 d-flex align-items-center gap-2">
            <input class="form-check-input ms-0" type="checkbox" asp-for="IncludeRegularized" id="historyToggle" onchange="this.form.submit()">
            <label class="form-check-label small fw-semibold" for="historyToggle" style="cursor:pointer;">Include Regularized</label>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-bar-chart me-1"></i>Load
        </button>
    </form>
</div>

<div class="alert alert-secondary py-2 small mb-3" role="alert">
    <i class="bi bi-info-circle me-1"></i>
    Enable <strong>Include Regularized</strong> to see historical missing punches that were later corrected via regularization.
</div>

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Missing Punches — @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.Month) @Model.Year</h5>
        <span class="badge text-bg-warning">@Model.Records.Count records</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-modern align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">#</th>
                        <th>Date</th>
                        <th>Employee</th>
                        <th>In / Out Times</th>
                        <th>Status</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Records.Any())
                    {
                        <tr><td colspan="6" class="text-center py-5 text-muted">
                            <i class="bi bi-check-circle fs-1 d-block mb-2 opacity-25 text-success"></i>No missing punch records found for this period!
                        </td></tr>
                    }
                    else
                    {
                        int sno = 1;
                        foreach (var record in Model.Records)
                        {
                            bool isRegularized = record.Remarks?.Contains("Regularized") ?? false;
                            <tr>
                                <td class="ps-4 text-muted">@(sno++)</td>
                                <td>
                                    <div class="fw-semibold small">@record.RecordDate.ToString("dd MMM yyyy")</div>
                                    <div class="text-muted" style="font-size:0.75rem;">@record.RecordDate.DayOfWeek</div>
                                </td>
                                <td>
                                    <div class="fw-semibold">@record.Employee?.EmployeeName</div>
                                    <div class="text-muted small">@record.EmployeeId</div>
                                </td>
                                <td>
                                    @if (isRegularized)
                                    {
                                        <span class="text-success fw-bold">@record.InTime?.ToString("HH:mm")</span>
                                        <span class="text-muted mx-1">/</span>
                                        <span class="text-success fw-bold">@record.OutTime?.ToString("HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span class="@(record.InTime == null ? "text-danger fw-bold" : "")">@(record.InTime?.ToString("HH:mm") ?? "—")</span>
                                        <span class="text-muted mx-1">/</span>
                                        <span class="@(record.OutTime == null ? "text-danger fw-bold" : "")">@(record.OutTime?.ToString("HH:mm") ?? "—")</span>
                                    }
                                </td>
                                <td>
                                    @if (isRegularized)
                                    {
                                        <span class="badge text-bg-success"><i class="bi bi-check-circle me-1"></i>Regularized</span>
                                    }
                                    else
                                    {
                                        <span class="badge text-bg-danger"><i class="bi bi-exclamation-circle me-1"></i>Missing Punch</span>
                                    }
                                </td>
                                <td class="small text-muted">@record.Remarks</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
