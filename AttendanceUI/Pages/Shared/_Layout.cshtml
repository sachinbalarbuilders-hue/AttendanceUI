<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AttendanceUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AttendanceUI.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="dashboard-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <i class="bi bi-calendar-check"></i> AttendanceUI
                </div>
            </div>

            <div class="sidebar-content">
                <!-- Dashboard -->
                <a asp-page="/Index" class="nav-link">
                    <i class="bi bi-house-door"></i> Dashboard
                </a>

                <!-- Attendance Section -->
                <div class="nav-section-title mt-3">Attendance</div>
                <a asp-page="/AttendanceLogs/Index" class="nav-link">
                    <i class="bi bi-list-ul"></i> Attendance Logs
                </a>
                <a asp-page="/Attendance/Process" class="nav-link">
                    <i class="bi bi-gear"></i> Process Attendance
                </a>
                <a asp-page="/Attendance/MonthlyAttendanceSheet" class="nav-link">
                    <i class="bi bi-table"></i> Monthly Sheet
                </a>
                <a asp-page="/Regularizations/Index" class="nav-link">
                    <i class="bi bi-pencil-square"></i> Regularization
                </a>

                <!-- Masters Section -->
                <div class="nav-section-title mt-3">Masters</div>
                <a asp-page="/Employees/Index" class="nav-link">
                    <i class="bi bi-people"></i> Employees
                </a>
                <a asp-page="/Departments/Index" class="nav-link">
                    <i class="bi bi-building"></i> Departments
                </a>
                <a asp-page="/Designations/Index" class="nav-link">
                    <i class="bi bi-award"></i> Designations
                </a>
                <a asp-page="/Shifts/Index" class="nav-link">
                    <i class="bi bi-clock"></i> Shifts
                </a>
                <a asp-page="/Holidays/Index" class="nav-link">
                    <i class="bi bi-calendar-event"></i> Holidays
                </a>
                <a asp-page="/Masters/DeviceSettings" class="nav-link">
                    <i class="bi bi-hdd-network"></i> Device Settings
                </a>

                <!-- HR & Payroll Section -->
                <div class="nav-section-title mt-3">HR & Payroll</div>
                <a asp-page="/Leaves/Applications/Index" class="nav-link">
                    <i class="bi bi-file-earmark-text"></i> Leave Applications
                </a>
                <a asp-page="/CompOff/Requests/Index" class="nav-link">
                    <i class="bi bi-calendar-plus"></i> Comp Off Requests
                </a>
                <a asp-page="/Leaves/Allocations/Index" class="nav-link">
                    <i class="bi bi-calendar-check"></i> Leave Allocations
                </a>
                <a asp-page="/Leaves/Types/Index" class="nav-link">
                    <i class="bi bi-tags"></i> Leave Types
                </a>
                <a asp-page="/Loans/Applications/Index" class="nav-link">
                    <i class="bi bi-wallet2"></i> Loan Applications
                </a>
                <a asp-page="/Payroll/EmployeeSalary/Index" class="nav-link">
                    <i class="bi bi-currency-dollar"></i> Employee Salaries
                </a>
                <a asp-page="/Payroll/Process" class="nav-link">
                    <i class="bi bi-calculator"></i> Process Payroll
                </a>

                <!-- Reports Section -->
                <div class="nav-section-title mt-3">Reports</div>
                <a asp-page="/Reports/LateIn" class="nav-link">
                    <i class="bi bi-clock-history"></i> Late In Report
                </a>
                <a asp-page="/Reports/EarlyGo" class="nav-link">
                    <i class="bi bi-door-open"></i> Early Go Report
                </a>
                <a asp-page="/Reports/MissingPunch" class="nav-link">
                    <i class="bi bi-exclamation-triangle"></i> Missing Punch
                </a>
                <a asp-page="/Reports/ApplicationTracking" class="nav-link">
                    <i class="bi bi-list-ol"></i> Application Tracking
                </a>
            </div>

            <div class="sidebar-footer">
                <small class="text-muted">&copy; 2026 AttendanceUI</small>
            </div>
        </aside>

        <!-- Main Content Area -->
        <div class="main-content">
            <!-- Topbar -->
            <header class="topbar">
                <div class="d-flex align-items-center">
                    <button class="topbar-toggler" id="sidebarToggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <h5 class="mb-0 ms-2 fw-semibold text-dark">@ViewData["Title"]</h5>
                </div>
                <div class="d-flex align-items-center gap-3">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <span class="text-secondary">
                            <i class="bi bi-person-circle"></i>
                            @(User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.GivenName)?.Value ?? User.Identity.Name)
                        </span>
                        <form method="post" asp-page="/Account/Logout" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-page="/Account/Login" class="btn btn-primary btn-sm">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                    }
                </div>
            </header>

            <!-- Page Content -->
            <div class="content-wrapper">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="footer-content">
                &copy; 2026 - AttendanceUI
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Sidebar toggle for mobile
        document.getElementById('sidebarToggle')?.addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('show');
        });
        // Highlight active sidebar link
        document.querySelectorAll('.sidebar-content .nav-link').forEach(link => {
            if (link.getAttribute('href') === window.location.pathname) {
                link.classList.add('active');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
