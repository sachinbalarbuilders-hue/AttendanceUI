@page
@model AttendanceUI.Pages.Shifts.CreateModel
@{
    ViewData["Title"] = "Add Shift";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h4 class="mb-1 fw-bold">Add Shift</h4>
        <p class="text-muted mb-0 small">Create a new work shift with attendance rules</p>
    </div>
    <a asp-page="./Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<form method="post">
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-clock me-2 text-primary"></i>Shift Timings</h5>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" style="display:none;"></div>
            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="Input.ShiftName" class="form-label fw-semibold"></label>
                    <input asp-for="Input.ShiftName" class="form-control" />
                    <span asp-validation-for="Input.ShiftName" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.ShiftCode" class="form-label fw-semibold"></label>
                    <input asp-for="Input.ShiftCode" class="form-control" />
                    <span asp-validation-for="Input.ShiftCode" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.Status" class="form-label fw-semibold"></label>
                    <select asp-for="Input.Status" class="form-select">
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label asp-for="Input.StartTime" class="form-label fw-semibold">Start Time</label>
                    <input asp-for="Input.StartTime" class="form-control" type="time" />
                    <span asp-validation-for="Input.StartTime" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.EndTime" class="form-label fw-semibold">End Time</label>
                    <input asp-for="Input.EndTime" class="form-control" type="time" />
                    <span asp-validation-for="Input.EndTime" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.LunchBreakStart" class="form-label fw-semibold">Lunch Start</label>
                    <input asp-for="Input.LunchBreakStart" class="form-control" type="time" />
                    <span asp-validation-for="Input.LunchBreakStart" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.LunchBreakEnd" class="form-label fw-semibold">Lunch End</label>
                    <input asp-for="Input.LunchBreakEnd" class="form-control" type="time" />
                    <span asp-validation-for="Input.LunchBreakEnd" class="text-danger small"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-shield-check me-2 text-primary"></i>Attendance Rules</h5>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-3">
                    <label asp-for="Input.HalfTime" class="form-label fw-semibold">Half Day Cutoff</label>
                    <input asp-for="Input.HalfTime" class="form-control" type="time" />
                    <span asp-validation-for="Input.HalfTime" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.LateComingGraceMinutes" class="form-label fw-semibold">Late Grace (mins)</label>
                    <input asp-for="Input.LateComingGraceMinutes" class="form-control" type="number" />
                    <span asp-validation-for="Input.LateComingGraceMinutes" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.LateComingAllowedCountPerMonth" class="form-label fw-semibold">Late Allowed /mo</label>
                    <input asp-for="Input.LateComingAllowedCountPerMonth" class="form-control" type="number" />
                    <span asp-validation-for="Input.LateComingAllowedCountPerMonth" class="text-danger small"></span>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <div class="form-check mb-2">
                        <input asp-for="Input.LateComingHalfDayOnExceed" class="form-check-input" />
                        <label asp-for="Input.LateComingHalfDayOnExceed" class="form-check-label fw-semibold"></label>
                    </div>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.EarlyLeaveGraceMinutes" class="form-label fw-semibold">Early Leave Grace (mins)</label>
                    <input asp-for="Input.EarlyLeaveGraceMinutes" class="form-control" type="number" />
                    <span asp-validation-for="Input.EarlyLeaveGraceMinutes" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.EarlyGoAllowedTime" class="form-label fw-semibold">Early Go Allowed At</label>
                    <input asp-for="Input.EarlyGoAllowedTime" class="form-control" type="time" />
                    <span asp-validation-for="Input.EarlyGoAllowedTime" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.EarlyGoFrequencyPerMonth" class="form-label fw-semibold">Early Go Freq /mo</label>
                    <input asp-for="Input.EarlyGoFrequencyPerMonth" class="form-control" type="number" />
                    <span asp-validation-for="Input.EarlyGoFrequencyPerMonth" class="text-danger small"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-check-lg me-1"></i>Save Shift
        </button>
        <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
